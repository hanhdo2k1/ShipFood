@model List<ShipFood.Models.tbDanhMuc>

<div class="app-card-body">
    <div class="table-responsive">
        <table class="table table-striped table-bordered first">
            <thead>
                <tr>
                    <th class="cell" style="text-align: center;">ID</th>
                    <th class="cell" style="text-align: center;">Danh mục</th>
                    <th class="cell" style="text-align: center;">Hình ảnh</th>
                    <th class="cell" style="text-align: center;">Mô tả</th>
                    <th style="text-align: center; width: 100px ;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="cell">#@item.madanhmuc</td>
                        <td class="cell"><span class="truncate">@item.tendanhmuc</span></td>
                        <td class="cell"><img style="width: 100px; height: 100px" src="~/Source/images/Danhmuc/@item.hinhanh" alt=""></td>
                        <td class="cell">@item.mota</td>
                        <td style="text-align: center;">
                            <a style="color: red" href="@Url.Action("EditCategory","Admin", new {id=item.madanhmuc })">Sửa</a> |
                            <a style="color: red" href="@Url.Action("Category","Admin", new {id=item.madanhmuc })">Xóa</a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div><!--//table-responsive-->

</div><!--//app-card-body-->
