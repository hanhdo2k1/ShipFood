
@{
    ViewBag.Title = "Signup";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Fastship - Khám phá, đặt hàng, giao tân nơi</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="" name="keywords" />
    <meta content="" name="description" />

    <!-- Favicon -->
    <link href="~/Source/Home/img/favicon.ico" rel="icon" />

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500&family=Lora:wght@600;700&display=swap"
          rel="stylesheet" />

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Libraries Stylesheet -->
    <link href="~/Source/Home/lib/animate/animate.min.css" rel="stylesheet" />
    <link href="~/Source/Home/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/Source/Home/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Template Stylesheet -->
    <link href="~/Source/Home/css/style.css" rel="stylesheet" />
    <link href="~/Source/Home/css/login.css" rel="stylesheet" />
</head>

<body>
    <!-- Spinner Start -->
    
    <!-- Navbar End -->
    <div class="register-container">
        <h2>Đăng ký tài khoản</h2>
        <form action="~/Home/Signup" method="post">
            <input type="text" name="hoten" placeholder="Họ tên" required />
            <input type="text" name="username" placeholder="Username" required />
            <input type="password" name="pwd" placeholder="Mật khẩu" required />
            <input type="password" name="repeatpw" placeholder="Nhập lại mật khẩu" required />
            <select name="loaitaikhoan" required>
                <option value="" disabled selected>Chọn loại tài khoản</option>
                <option value="Khách hàng">Khách hàng</option>
                <option value="Quán ăn">Quán ăn</option>
                <option value="Shipper">Shipper</option>
            </select>
            <input type="tel" name="sdt" placeholder="Số điện thoại" required />
            <input type="email" name="email" placeholder="Email" required />
            <input type="text" name="diachi" placeholder="Địa chỉ" required />
        @if (ViewBag.err != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.err
            </div>
        }
            <button type="submit" class="register-submit">Đăng ký</button>
        </form>
        <div class="login-note">
            <span>Đã có tài khoản? <a href="~/Home/Login">Đăng nhập</a></span>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Source/Home/lib/wow/wow.min.js"></script>
    <script src="~/Source/Home/lib/easing/easing.min.js"></script>
    <script src="~/Source/Home/lib/waypoints/waypoints.min.js"></script>
    <script src="~/Source/Home/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/Source/Home/js/main.js"></script>
</body>
</html>


