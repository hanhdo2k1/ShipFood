@{
    ViewBag.Title = "Discount";
    Layout = "~/Views/Shared/_LayoutPageRestaurant.cshtml";
    List<ShipFood.Models.tbMonAnKhuyenMai> khuyenMais = ViewBag.khuyenMais;
    List<ShipFood.Models.tbKhuyenMai> maKM = ViewBag.maKM;
    List<ShipFood.Models.tbMonAn> monAns = ViewBag.monAns;
}

    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>Mã khuyến mãi</h4>
                </div>
            </div>
        </div>
        <!-- row -->

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Danh sách mã khuyến mãi</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-responsive-md">
                                <thead>
                                    <tr>
                                        <th><strong>Mã KM</strong></th>
                                        <th><strong>Tên món</strong></th>
                                        <th><strong>Trạng thái</strong></th>
                                        <th><strong>Số lượng</strong></th>
                                        <th style="width:100px"><strong>Giảm giá</strong></th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var i in khuyenMais)
                                    {
                                        <tr>
                                            <td><strong>@i.makm</strong></td>
                                            <td>@i.tbMonAn.tenmon</td>
                                            <td><span class="badge light badge-success">@i.trangthai</span></td>
                                            <td>@i.soluong</td>
                                            <td>@i.phantramgiam %</td>
                                            @*<td>20</td>*@
                                            @*<td>
                                                <div class="dropdown">
                                                    <button type="button" class="btn btn-success light sharp" data-toggle="dropdown">
                                                        <svg width="20px" height="20px" viewBox="0 0 24 24" version="1.1">
                                                            <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                                                <rect x="0" y="0" width="24" height="24" />
                                                                <circle fill="#000000" cx="5" cy="12" r="2" />
                                                                <circle fill="#000000" cx="12" cy="12" r="2" />
