@model ShipFood.Models.tbUser
@{
    ViewBag.Title = "ViTien";
    Layout = "~/Views/Shared/_LayoutPageShipper.cshtml";
}
@{ List<ShipFood.Models.tbDonHang> listdh = ViewBag.listdh;}
<div class="content-body">
    <div class="app-content pt-3 p-md-3 p-lg-4">
        <div class="container-fluid">
            <div class="form-head d-flex mb-3">
                <div class="mr-auto">
                    <h3 class="text-black font-w600 mb-0">Ví tiền</h3>
                    <p class="mb-0">Số dư: @(Model.vitien.HasValue ? Model.vitien.Value.ToString("N0") : "0") VND</p>
                </div>
                <div class="row mx-0">
                    <div class="btn-naptien ml-auto ">
                        <button type="submit" class="btn btn-primary">Nạp tiền</button>
                    </div>

                    <div class="btn-rutien ml-auto" style="padding-left: 5px;">
                        <button type="submit" class="btn btn-primary">Rút tiền</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="row-donhang">
            @foreach (var item in listdh)
            {
                <div class="item border-bottom py-3">
                    <div class="row justify-content-between align-items-center">
                        <div class="col-auto">
                            <div class="item-label"><strong>Đơn hàng: #000 @item.madh</strong></div>
                            <p class="mb-0">Số dư: @(item.phiship.HasValue ? item.phiship.Value.ToString("N0") : "0") VND</p>
                        </div><!--//col-->
                    </div><!--//row-->
                </div><!--//item-->
            }

        </div>

    </div><!--//app-content-->
</div>

